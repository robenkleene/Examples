{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "NPM Start",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "start"]
    },
    {
      "name": "Debug With Chrome",
      "type": "node",
      "request": "launch",
      "env": {
        "BROWSER": "none",
      },
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "start"],
      "serverReadyAction": {
        "pattern": "Starting the development server...",
        "uriFormat": "http://localhost:3000",
        "action": "debugWithChrome"
      }
    }
  ]
}
